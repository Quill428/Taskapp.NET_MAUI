<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:NotesApp"
             xmlns:converters="clr-namespace:NotesApp.Converters"
             x:Class="NotesApp.App">
    <Application.Resources>
        <ResourceDictionary>            
            
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />                
            </ResourceDictionary.MergedDictionaries>
            
            <converters:CompletedTextColorConverter x:Key="CompletedTextColorConverter" />
            <converters:CategoryToColorConverter x:Key="CategoryToColorConverter" />
            <converters:BoolToTextDecorationsConverter x:Key="BoolToTextDecorationsConverter" />
            
        </ResourceDictionary>
    </Application.Resources>
</Application>
